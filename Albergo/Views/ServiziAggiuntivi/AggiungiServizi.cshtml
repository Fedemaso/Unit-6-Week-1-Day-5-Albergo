@model Albergo.Models.ServizioAggiuntivoList

@{
    ViewBag.Title = "Aggiungi Servizi Aggiuntivi";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                @Html.Label("Nome Cliente", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ClienteID", ViewBag.Clienti as IEnumerable<SelectListItem>, "Seleziona un cliente", new { @class = "form-control", @id = "clienteDropdown" })
                </div>
            </div>

            @foreach (var servizio in Model.ServiziDisponibili)
            {
                <div class="form-group">
                    @Html.Label(servizio.Descrizione, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox($"QuantitaSelezionate[{servizio.TipoServizioID}]", 0, new { @class = "form-control" })
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.Label("Data", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("Data", DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "form-control", @type = "date" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Aggiungi" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
